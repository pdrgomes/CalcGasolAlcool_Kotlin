        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gasolina"/>

    <EditText
        android:id="@+id/etGas"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/etButtom"
        android:layout_width="match_parent"
        android:text="Calcular"
        android:layout_height="wrap_content"/>

